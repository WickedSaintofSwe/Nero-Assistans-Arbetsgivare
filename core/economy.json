  "ob_tabell_info": "OB-nivåer varierar med avtal. Ange timantal och nivå i kronor om du vet dem.",
  "variables_optional": {
    "OB_natt_kr_per_timme": null,
    "OB_helg_kr_per_timme": null
  },
  "formulas_explained": [
    "grundlon = assistans_timmar_per_manad * timlon_basutan_OB",
    "ob_ersattning = (OB_natt_timmar * OB_natt_kr_per_timme) + (OB_helg_timmar * OB_helg_kr_per_timme)",
    "jour_ersattning = jour_timmar * jour_ersattning_per_timme",
    "lon_summa = grundlon + ob_ersattning + jour_ersattning",
    "sociala_avgifter = lon_summa * (arbetsgivaravgift_procent / 100)",
    "semesterersattning = grundlon * (semesterersattning_procent / 100)",
    "kollektiv_tillagg = grundlon * (kollektivavtal_tillagg_procent / 100)",
    "totalkostnad = lon_summa + sociala_avgifter + semesterersattning + kollektiv_tillagg + admin_kostnad_fast + ovrigt_kostnad_fast",
    "fk_ersattning = assistans_timmar_per_manad * fk_ersattning_kr_per_timme",
    "netto_diff = fk_ersattning - totalkostnad"
  ],
  "output_format_hint": [
    "Visa tabell: rad för varje delpost + summa.",
